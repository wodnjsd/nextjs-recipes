model Like {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  userId   String
  recipeId String @db.ObjectId
  Recipe   Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)
}

model Comment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  userId    String
  author    String
  createdAt DateTime @default(now())
  recipeId  String   @db.ObjectId
  Recipe    Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@map("comments")
}
